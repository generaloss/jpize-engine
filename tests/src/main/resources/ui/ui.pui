                    }
                    @Slider (match_parent, 0.04rh) {
                        padding.top: 0.01rh
                        value: 0.45
                        ID: "slider 3"
                    }
                }
            #}
        }

        @VBox (0.68rw, 0.98rh) {
            padding: (0.01rh, 0.01rw)
            # path
            @ConstraintLayout (match_parent, 0.075rh) {
                style.corner_radius: 0.2rh
                style.background.color: (0.9, 0.6)

                @TextView ("Path / ", !font) {
                    ID: "path"
                    padding: (zero, 10px, zero, auto)
                    color: (0.1)
                }
            }
            # panel
            @HBox (match_parent, 0.4rh) {
                style.corner_radius: 0.05rh
                padding.top: 0.01rh
                style.background.color: (0.9, 0.6)

                @Rect (1.77ap, match_parent) {
                    padding.left: 0.1rh
                    ID: "icon"
                    style.background.color: (1)

                    @TextView ("Backend is OFF", !font) {
                        ID: "off_backend"
