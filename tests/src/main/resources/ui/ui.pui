                style.background.color: (0.4, 0.4, 0.5, 1)
                @TextView ("Sliders", !font) {
                    padding: (0px)
                }
            }
            @Rect (match_parent, 0.005rh) {
                style.background.color: (0.28, 1)
            }
            #@ScrollView (match_parent, 0.92rh) {
                @VBox (match_parent, match_parent) {
