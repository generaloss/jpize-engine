                @VBox (0.45rh, match_parent) {
                    padding.left: 0.05rh
                    @Button (match_parent, 0.15rh, "Button 1", !font) {
                        ID: "button 1"
                        padding.top: 0.05rh
                    }
                    @Button (match_parent, 0.15rh, "Button 2", !font) {
                        ID: "button 2"
                        padding.top: 0.05rh
                    }
                    @Button (match_parent, 0.15rh, "Button 3", !font) {
                        ID: "button 3"
                        padding.top: 0.05rh
                    }
