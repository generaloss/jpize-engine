@VBox {

    # top navbar
    @ConstraintLayout (match_parent, 0.08rh) {
        style.background.color: (0.23, 1)

        @TextView ("SERVER STARTER", !font) {
            padding: (0px)
        }
        @Rect (0.75rh, 0.75rh) {
            padding: (0px, auto, 0px, 0.6rh)
            style.background.image: !icon
        }
    }
    @Rect (match_parent, 0.005rh) {
         style.background.color: (0.2, 1)
    }

    # other content
    @HBox (match_parent, 0.915rh) {
        style.background: {
            image: !background
            color.a: 1.0
        }

        # left navbar
        @VBox (0.3rw, match_parent) {
            style.background.color: (0.45, 0.6)
            @ConstraintLayout (match_parent, 0.075rh) {
                style.background.color: (0.33, 1)
                @TextView ("Servers:", !font) {
                    padding: (0px)
                }
            }
            @Rect (match_parent, 0.005rh) {
                style.background.color: (0.28, 1)
            }
            @VBox (match_parent, 0.92rh) {
                ID: "server_list"
            }
        }

        @VBox (0.68rw, 0.98rh) {
            padding: (0.01rh, 0.01rw)
            # path
            @ConstraintLayout (match_parent, 0.075rh) {
                style.background.color: (0.9, 0.6)
                @TextView ("Servers / ", !font) {
                    ID: "server_path"
                    padding: (zero, 10px, zero, auto)
                    color: (0.1)
                }
            }
            # server panel
            @HBox (match_parent, 0.4rh) {
                padding.top: 0.01rh
                style.background.color: (0.9, 0.6)
                @Rect (1.77ap, match_parent) {
                    ID: "server_icon"
                    style.background.color: (1)

                    @TextView ("Backend is OFF", !font) {
                        ID: "off_backend"
                        hidden: true
                        padding: (0px)
                        color: (0, 1)
                        text_size: 0.3rh
                    }
                }
                @Button (3ap, 0.15rh, "Start", !font) {
                    ID: "start_button"
                    padding: (0.05rh, 0.05rh)
                    style.corner_radius: 0.4rh
                }
                @Button (3ap, 0.15rh, "Stop", !font) {
                    ID: "stop_button"
                    padding: (0.05rh, 0.05rh)
                    style.corner_radius: 0.4rh
                }
                @Button (3ap, 0.15rh, "Kill", !font) {
                    ID: "kill_button"
                    padding: (0.05rh, 0.05rh)
                    style.corner_radius: 0.4rh
                }
            }
            # history
            @ConstraintLayout (match_parent, 0.495rh) {
                padding.top: 0.01rh
                margin: (zero, zero, 0.01rh, 0.01rh)
                style.background.color: (0.9, 0.6)

                @TextView ("I want pizza 123567567565675675675", !font, 0.1rh) {
                    ID: "history"
                    padding: (0.01rh, 0.01rh)
                    color: (0, 1)
                    wrap: true
                }
            }
        }
    }

}