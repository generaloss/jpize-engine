$button_style = {
    corner_radius: 10px
    border_size: 1px
    border_color: (0.7, 1.0)
    background: {
        color: (0.3, 0.5)
    }
}

@VBox {
    style.background.color: (0.4, 0.5, 0.5, 1)

    @TextView ("fps: 540000000000++", !font) {
        ID: "fps"
    }

    @HBox (14ap, 70px) {
        padding: (0.35rh, zero, auto, zero)

        @Button (6.75ap, match_parent, "Graphics", !font) {
            padding: (zero, zero, zero, zero)
            style: $button_style
            textview.color: (1, 1, 1, 1)
        }
        @Button (6.75ap, match_parent, "Controls", !font) {
            padding: (zero, 0.5ap, zero, zero)
            style: $button_style
            textview.color: (1, 1, 1, 1)
        }
    }

    @HBox (14ap, 70px) {
        padding: (20px, zero, auto, zero)

        @Button (6.75ap, match_parent, "Others", !font) {
            ID: "pizza"
            padding: (zero, zero, zero, zero)
            style: $button_style
            textview.color: (1, 1, 1, 1)
        }
        @Button (6.75ap, match_parent, "Super secret settings", !font) {
            padding: (zero, 0.5ap, zero, zero)
            style: $button_style
            textview.color: (1, 1, 1, 1)
        }
    }

    @Button (8ap, 70px, "Done", !font) {
        ID: 'done'
        padding: (20px, zero, auto, zero)
        style: $button_style
        textview.color: (1, 1, 1, 1)
    }

}